<?xml version="1.0" encoding="UTF-8" ?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="friendns">
		
	
	<!-- add friend -->
	<insert id="add_friend" parameterType="Map">
		insert into friendship	values(friend_seq.NEXTVAL,#{email1}, #{email2})
	</insert>
	
	<!-- friend list  -->
	<select id="list" parameterType="int" resultType="friend">
		select * from friendship where email1=#{email1}
	</select>
	
	<!-- delete friend -->
	<delete id="del_friend" parameterType="Map">
		delete from friendship where email1=#{email1} and email2=#{email2}
	</delete>
	
</mapper>
